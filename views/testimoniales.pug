extends ./layout/index

block contenido 
    main.container.mt-5
        h1.text-center.mt-5 #{page}

        blockquote.text-center Lee Sobre Nuestros clientes y sus Experiencias
        include ./layout/testimonials_block

        .row
            .col-md-12

                h2.d-block.w-100.text-center Agrega un Testimonial 

                if(err)
                    .alert.col.alert-danger.text-center #{err}

            .row.justify-content-center.col
                .col-md-8 
                    form(action='/testimoniales' method='POST')
                        .form-group
                            label(for='name') Nombre
                            input#name(type='text', placeholder='Tu Nombre', name='nombre', class="form-control", value=nombre)

                        .form-group
                            label(for='email') Email
                            input#email(type='text', placeholder='Tu Correo', name='email', class="form-control", value=email)


                        .form-group
                            label(for='mensaje') Mensaje
                            textarea#mensaje(class="form-control", name="mensaje", placeholder='Tu Mensaje', rows=3) #{mensaje}


                        input.btn.btn-success.btn-block(type='submit', value='Enviar')